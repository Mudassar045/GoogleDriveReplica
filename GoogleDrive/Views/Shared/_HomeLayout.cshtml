<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - XS-Drive</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#428bca;border-color:#357ebd">
        <div class="override-container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("XS-Drive", "user", "home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white" })
            </div>
            <div class="override-container">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "user", "home", new { area = "" }, new { @style = "color:white" })</li>
                </ul>
                <div class="col-sm-4 col-md-4">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search File" id="searchable">
                            <div class="input-group-btn">
                                <button class="btn btn-info" type="submit" id="btnSearchFile"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <ul class="nav navbar-nav override-pull-right">
                    <li>@Html.ActionLink("Logout", "logout", "user", new { area = "" }, new { @style = "color:white;" })</li>
                </ul>
            </div>
        </div>
    </div>
    <h2 style="margin-left: 0.15em">User: @GoogleDrive.Security.SessionManager.User.Name</h2>
    <hr>
    <div>
        @RenderBody()
    </div>
    <div class="container body-content">
        <hr />
        <footer style="position:static">
            <p>&copy; @DateTime.Now.Year XS-Drive</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
